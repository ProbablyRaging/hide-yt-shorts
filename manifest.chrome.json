{
    "name": "Hide YouTube Shorts",
    "description": "Hide YouTube Shorts",
    "version": "1.7.0",
    "manifest_version": 3,
    "permissions": [
        "tabs",
        "scripting"
    ],
    "host_permissions": [
        "*://*.youtube.com/*"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/*"
            ],
            "css": [
                "styles/hide.css"
            ]
        }
    ],
    "action": {
        "default_title": "Hide YouTube Shorts"
    },
    "icons": {
        "16": "public/icons/icon16.png",
        "32": "public/icons/icon48.png",
        "48": "public/icons/icon48.png",
        "128": "public/icons/icon128.png"
    }
}